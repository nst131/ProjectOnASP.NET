
@{
    ViewBag.Title = "DeleteAlbum";
}

@model PresentationYandexMusic.Areas.Admin.ViewModel.Album.DeleteAlbumViewModel

<form class="Form" action="/Admin/AdminAlbum/DeleteAlbum/@Model.Id" method="post" enctype="multipart/form-data">
    <h3>Вы уверены что хотите удалить этот альбом</h3>
    <img src="/Admin/AdminAlbum/GetAlbumImage?Id=@Model.Id" width="200" height="200" />
    <p>@Model.Name</p>
    <input type="submit" value="Удалить альбом" class="btn btn-danger"/>
</form>

<link href="~/Content/StyleItemDelete.css" rel="stylesheet" />

