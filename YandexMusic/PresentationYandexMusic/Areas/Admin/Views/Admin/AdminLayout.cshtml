@{
    ViewBag.Title = "AdminLayout";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>

<div class="list-group">
    <a href="@Url.Action(MVC.Admin.AdminGenre.CreateGenre())" class="list-group-item list-group-item-action list-group-item-warning">Добавить Жанр</a>
    <a href="@Url.Action(MVC.Admin.AdminSinger.CreateSinger())" class="list-group-item list-group-item-action list-group-item-info">Добавить Исполнителя</a>
    <a href="@Url.Action(MVC.Admin.AdminAlbum.CreateAlbum())" class="list-group-item list-group-item-action list-group-item-warning">Добавить Альбом</a>
    <a href="@Url.Action(MVC.Admin.AdminPlaylist.CreatePlaylist())" class="list-group-item list-group-item-action list-group-item-info">Добавить Плэлист</a>
    <a href="@Url.Action(MVC.Admin.AdminTrack.CreateTrack())" class="list-group-item list-group-item-action list-group-item-warning">Добавить Трек</a>
</div>
@Html.ActionLink("Вернуться назад",MVC.Home.StartPage())
@section scripts{
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/Scripts/ScriptSpinnerVisible.js")
}

<link rel="stylesheet" href="~/Content/StyleSpinner.css" />
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<div id="ListData">
    @Ajax.ActionLink("Просмотреть все загрузки",MVC.Admin.Admin.GetAllSingersWithData(), new AjaxOptions() { UpdateTargetId = "ListData" }, new { @class = "Link" })
</div>

<div class="spinner">
    <div class="spinner-border text-success" role="status">
        <span class="sr-only">Loading...</span>
    </div>
</div>